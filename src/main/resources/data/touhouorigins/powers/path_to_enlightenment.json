{
  "type": "apoli:multiple",
  "resource": {
    "type": "apoli:resource",
    "min": 0,
    "max": 100,
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "bar_index": 12,
      "condition": {
        "type": "apoli:resource",
        "resource": "*:*_resource",
        "comparison": "!=",
        "compare_to": 0
      }
    }
  },
  "choosing_path": {
    "type": "apoli:action_over_time",
    "interval": 1,
    "rising_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:execute_command",
          "command": "function touhouorigins:path_to_enlightenment"
        },
        {
          "type": "apoli:play_sound",
          "sound": "touhouorigins:entity.celestial.evolve",
          "volume": 2
        }
      ]
    },
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_resource",
      "comparison": "==",
      "compare_to": 100
    }
  },
  "key": {
    "type": "apoli:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_resource",
      "change": 1
    },
    "falling_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_resource",
      "change": 0,
      "operation": "set"
    },
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apugli:key_pressed",
          "key": {
            "key": "key.use",
            "continuous": true
          }
        },
        {
          "type": "apoli:or",
          "conditions": [
            {
              "type": "apoli:equipped_item",
              "equipment_slot": "mainhand",
              "item_condition": {
                "type": "apoli:ingredient",
                "ingredient": {
                  "item": "minecraft:elytra"
                }
              }
            },
            {
              "type": "apoli:equipped_item",
              "equipment_slot": "offhand",
              "item_condition": {
                "type": "apoli:ingredient",
                "ingredient": {
                  "item": "minecraft:elytra"
                }
              }
            }
          ]
        }
      ]
    }
  },
  "badges": [
    "touhouorigins:upgrade"
  ]
}