    "bientity_action": {
      "type": "apoli:actor_action",
      "action": {
        "type": "apoli:and",
        "actions": [
          {
            "type": "apoli:add_velocity",
            "y": 2.5,
            "z": -2,
            "space": "local_horizontal"
          },
          {
            "type": "apoli:play_sound",
