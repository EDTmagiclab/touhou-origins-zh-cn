{
  "type": "apoli:multiple",
  "resource": {
    "type": "apoli:resource",
    "min": 0,
    "max": 10,
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
      "bar_index": 2,
      "condition": {
        "type": "apoli:resource",
        "resource": "*:*_resource",
        "comparison": "!=",
        "compare_to": 0
      }
    },
    "min_action": {
      "type": "apoli:play_sound",
      "sound": "touhouorigins:origin.moon_rabbit.deactivate"
    },
    "max_action": {
      "type": "apoli:play_sound",
      "sound": "touhouorigins:origin.moon_rabbit.activate"
    }
  },
  "ability": {
    "type": "apoli:active_self",
    "entity_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_resource",
      "change": 10,
      "operation": "set"
    },
    "cooldown": 1200,
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "bar_index": 1
    }
  },
  "reload": {
    "type": "apoli:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "apoli:if_else",
      "condition": {
        "type": "apoli:equipped_item",
        "equipment_slot": "mainhand",
        "item_condition": {
          "type": "apoli:enchantment",
          "enchantment": "minecraft:multishot",
          "comparison": ">=",
          "compare_to": 1
        }
      },
      "if_action": {
        "type": "apoli:and",
        "actions": [
          {
            "type": "apoli:equipped_item_action",
            "equipment_slot": "mainhand",
            "action": {
              "type": "apoli:modify",
              "modifier": "touhouorigins:crossbow_charge_multishot"
            }
          },
          {
            "type": "apoli:execute_command",
            "command": "clear @s minecraft:arrow 1"
          }
        ]
      },
      "else_action": {
        "type": "apoli:and",
        "actions": [
          {
            "type": "apoli:equipped_item_action",
            "equipment_slot": "mainhand",
            "action": {
              "type": "apoli:modify",
              "modifier": "touhouorigins:crossbow_charge"
            }
          },
          {
            "type": "apoli:execute_command",
            "command": "clear @s minecraft:arrow 1"
          }
        ]
      }
    },
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apoli:resource",
          "resource": "*:*_resource",
          "comparison": "!=",
          "compare_to": 0
        },
        {
          "type": "apoli:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "apoli:and",
            "conditions": [
              {
                "type": "apoli:ingredient",
                "ingredient": {
                  "item": "minecraft:crossbow"
                }
              },
              {
                "type": "apoli:nbt",
                "nbt": "{Charged:1b}",
                "inverted": true
              }
            ]
          }
        },
        {
          "type": "apoli:inventory",
          "process_mode": "stacks",
          "item_condition": {
            "type": "apoli:ingredient",
            "ingredient": {
              "item": "minecraft:arrow"
            }
          },
          "comparison": ">=",
          "compare_to": 1
        }
      ]
    }
  },
  "resource_drain": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_resource",
      "change": -1
    },
    "interval": 20,
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_resource",
      "comparison": "!=",
      "compare_to": 0
    }
  },
  "particles": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:spawn_particles",
      "particle": "minecraft:glow",
      "count": 25,
      "speed": 1,
      "spread": {
        "x": 0.1,
        "y": 0.1,
        "z": 0.1
      },
      "offset_y": 0.1
    },
    "interval": 2,
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_resource",
      "comparison": "!=",
      "compare_to": 0
    }
  },
  "reset_ability": {
    "type": "apoli:action_when_damage_taken",
    "cooldown": 1,
    "entity_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_resource",
      "change": 0,
      "operation": "set"
    },
    "condition": {
      "type": "apoli:health",
      "comparison": "<=",
      "compare_to": 0
    }
  },
  "starting_equipment": {
    "type": "apoli:starting_equipment",
    "stacks": [
      {
        "item": "minecraft:crossbow"
      },
      {
        "item": "minecraft:arrow",
        "amount": 15
      }
    ]
  }
}