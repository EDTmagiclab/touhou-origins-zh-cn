{
  "type": "apoli:multiple",
  "resource": {
    "type": "apoli:resource",
    "min": 0,
    "max": 100,
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
      "bar_index": 6,
      "condition": {
        "type": "apoli:resource",
        "resource": "*:*_resource",
        "comparison": "!=",
        "compare_to": 0
      }
    }
  },
  "choosing_path": {
    "type": "apoli:action_over_time",
    "interval": 1,
    "rising_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:execute_command",
          "command": "function touhouorigins:path_to_immortality"
        },
        {
          "type": "apoli:play_sound",
          "sound": "touhouorigins:entity.celestial.evolve",
          "volume": 2
        }
      ]
    },
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_resource",
      "comparison": "==",
      "compare_to": 100
    }
  },
  "totem_tooltip": {
    "type": "apoli:tooltip",
    "item_condition": {
      "type": "apoli:ingredient",
      "ingredient": {
        "item": "minecraft:totem_of_undying"
      }
    },
    "text": {
      "translate": "power.touhouorigins.path_to_immortality.name",
      "color": "light_purple"
    }
  },
  "badges": [
    {
      "sprite": "origins:textures/gui/badge/star.png",
      "text": "touhouorigins.gui.badge.upgrade"
    }
  ]
}