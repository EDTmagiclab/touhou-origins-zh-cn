{
  "type": "apoli:multiple",
  "timer": {
    "type": "apoli:resource",
    "min": 0,
    "max": 120,
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "bar_index": 15,
      "condition": {
        "type": "apoli:resource",
        "resource": "*:*_timer",
        "comparison": "!=",
        "compare_to": 120
      }
    },
    "start_value": 120
  },
  "trigger": {
    "type": "apoli:active_self",
    "entity_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:change_resource",
          "resource": "*:*_timer",
          "change": 0,
          "operation": "set"
        },
        {
          "type": "apoli:execute_command",
          "command": "tellraw @a[distance=..32] {\"translate\":\"power.touhouorigins.my_apocalypse_alert\",\"color\":\"gold\"}"
        },
        {
          "type": "apoli:play_sound",
          "sound": "touhouorigins:entity.hell_raven.alert",
          "volume": 2
        },
        {
          "type": "apoli:delay",
          "ticks": 20,
          "action": {
            "type": "apoli:play_sound",
            "sound": "touhouorigins:entity.hell_raven.alert",
            "volume": 2
          }
        },
        {
          "type": "apoli:delay",
          "ticks": 40,
          "action": {
            "type": "apoli:play_sound",
            "sound": "touhouorigins:entity.hell_raven.alert",
            "volume": 2
          }
        }
      ]
    },
    "cooldown": 3600,
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "bar_index": 15,
      "condition": {
        "type": "apoli:resource",
        "resource": "*:*_timer",
        "comparison": "==",
        "compare_to": 120
      },
      "inverted": true
    },
    "condition": {
      "type": "apoli:resource",
      "resource": "*:smoldering_decay_resource",
      "comparison": "<",
      "compare_to": 375
    }
  },
  "countdown": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_timer",
      "change": 1
    },
    "interval": 1,
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_timer",
      "comparison": "!=",
      "compare_to": 120
    }
  },
  "tag": {
    "type": "apoli:action_over_time",
    "rising_action": {
      "type": "apoli:execute_command",
      "command": "tag @s add apocalypse"
    },
    "interval": 1,
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_timer",
      "comparison": "<",
      "compare_to": 120
    }
  },
  "abort": {
    "type": "apoli:action_when_damage_taken",
    "entity_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:execute_command",
          "command": "tag @s remove apocalypse"
        },
        {
          "type": "apoli:change_resource",
          "resource": "*:*_timer",
          "change": 120,
          "operation": "set"
        }
      ]
    },
    "cooldown": 1,
    "condition": {
      "type": "apoli:health",
      "comparison": "<=",
      "compare_to": 0
    }
  },
  "remove_tag": {
    "type": "origins:action_on_callback",
    "entity_action_lost": {
      "type": "apoli:execute_command",
      "command": "tag @s remove apocalypse"
    }
  },
  "fireballs": {
    "type": "apoli:fire_projectile",
    "entity_type": "minecraft:fireball",
    "cooldown": 0,
    "hud_render": {
      "should_render": false
    },
    "tag": "{ExplosionPower:0b,power:[0.0,-0.1,0.0]}",
    "count": 58,
    "interval": 2,
    "speed": 0.3,
    "divergence": 720,
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apoli:resource",
          "resource": "*:*_trigger",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "apoli:resource",
          "resource": "*:smoldering_decay_resource",
          "comparison": "<",
          "compare_to": 375
        }
      ]
    }
  },
  "explosion": {
    "type": "apoli:action_over_time",
    "rising_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:explode",
          "power": 6,
          "destruction_type": "none",
          "damage_self": false
        },
        {
          "type": "apoli:execute_command",
          "command": "particle minecraft:explosion_emitter ~ ~1 ~ 1 0 1 1 2 force"
        },
        {
          "type": "apoli:execute_command",
          "command": "particle minecraft:flame ~ ~1 ~ 0.1 0 0.1 1 250 force"
        },
        {
          "type": "apoli:change_resource",
          "resource": "*:smoldering_decay_resource",
          "change": 750,
          "operation": "set"
        },
        {
          "type": "apoli:change_resource",
          "resource": "*:*_trigger",
          "change": 0,
          "operation": "set"
        },
        {
          "type": "apoli:execute_command",
          "command": "tag @s remove apocalypse"
        }
      ]
    },
    "interval": 1,
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apoli:resource",
          "resource": "*:*_timer",
          "comparison": "==",
          "compare_to": 120
        },
        {
          "type": "apoli:command",
          "command": "execute if entity @s[tag=apocalypse]",
          "comparison": "==",
          "compare_to": 1
        }
      ]
    }
  },
  "set_cooldown": {
    "type": "apoli:action_over_time",
    "rising_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_trigger",
      "change": 0,
      "operation": "set"
    },
    "interval": 1,
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_timer",
      "comparison": "==",
      "compare_to": 119
    }
  },
  "particles": {
    "type": "apoli:particle",
    "particle": "minecraft:lava",
    "frequency": 1,
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_timer",
      "comparison": "!=",
      "compare_to": 120
    }
